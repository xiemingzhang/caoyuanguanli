
@{

    Layout = null;
}
<html>
<head title="编辑草情">
    <link rel="stylesheet" type="text/css" href="/js/EasyUi/themes/default/easyui.css" />
    <link rel="stylesheet" type="text/css" href="/js/themes/icon.css" />
    <script src="/js/jquery-1.10.2.min.js"></script>
    <script type="text/javascript" src="/js/EasyUi/jquery.easyui.min.js"></script>
    <script src="/js/EasyUi/easyui-lang-zh_CN.js"></script>
</head>
<body>
    <div class="easyui-layout" style="width:100%;height:100%;">
        <div id="p" data-options="region:'west'" title="统计模块" style="width:150px;padding:10px">
            <a href="/Grass/Edit/@this.ViewData["key"]?part=1" class="easyui-linkbutton" style="width:120px;margin-top:10px;">草原基本信息</a><br />
            <a href="/Grass/Edit/@this.ViewData["key"]?part=2" class="easyui-linkbutton" style="width: 120px;margin-top: 10px;">草原类型及面积</a><br />
            <a href="/Grass/Edit/@this.ViewData["key"]?part=3" class="easyui-linkbutton" style="width: 120px; margin-top: 10px;">质量分级及面积</a><br />
            <a href="/Grass/Edit/@this.ViewData["key"]?part=4" class="easyui-linkbutton" style="width: 120px; margin-top: 10px;">草原退化面积</a><br />
            @*<a href="/Grass/Edit/@this.ViewData["key"]?part=5" class="easyui-linkbutton" style="width: 120px; margin-top: 10px;">超载率</a><br />*@
        </div>
        <div data-options="region:'center'">
            <div id="p1" href="/Grass/Edit/@this.ViewData["key"]?part=1" class="easyui-panel" title="" style="width:100%;height:100%;">
            </div>
        </div>
    </div>
    <script>
        $(function () {
            $("#p a").click(function () {
                $('#p1').panel('refresh', this.href);
                return false;
            })
        })
        
    </script>
</body>
</html>

